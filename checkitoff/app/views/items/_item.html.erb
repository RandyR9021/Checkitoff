<div clas="row clearfix">
  <% if item.completed? %>
  <div class="complete">
    <%= link_to complete_check_list_item_path(@check_list, item.id), method: :patch do %>
    <i style="opacity: 0.4;" class=fa fa fa-check></i>
    <% end %>
  </div>
  <div class="item">
    <p style="opacity: 0.4;"><strike><%= item.content %></strike></p>
    <p>strike><%= item.content %></strike></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", check_list_item_path(@check_list, item.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
  <% else %>
</div class="complete">
<%= link_to "Mark as Complete", complete_check_list_item_path(@check_list, item.id), method: :patch %>
</div>
<div class ="item">
  <p><%= item.content %></p>
</div>
<div class="trash">
  <%= link_to "Delete", check_list_item_path(@check_list, item.id), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
</div>
